// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tool {
  id            String   @id @default(cuid())
  title         String
  status        String
  category      String
  description   String
  howToUse      Json
  caveats       Json
  url           String?
  useCases      Json
  tips          Json
  addedOn       DateTime?
  recommendedBy String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Process {
  id           String   @id @default(cuid())
  title        String
  description  String
  toolsInvolved Json
  steps        Json
  category     String
  status       String
  tips         Json
  addedOn      DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id          String    @id @default(uuid())
  title       String
  description String
  imagePath   String?
  githubUrl   String
  liveUrl     String?
  tags        Json      // Will store as JSON array since SQLite doesn't support arrays
  acquired    DateTime
  createdBy   String    // Reference to User.id
  updatedAt   DateTime  @updatedAt
} 